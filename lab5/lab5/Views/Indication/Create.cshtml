@using lab5.Models.IndicationModels;
@model IndicationCreateViewModel
@using (Html.BeginForm("Create", "Indication", FormMethod.Post))
{
    <input name="CounterId" value="@Model.CounterId" hidden />
    <h3>Добавление показания</h3>
    <div class="mb-3">
        <label class="form-label" for="volumeInput">Объем:</label>
        <input type="number" name="Volume" id="volumeInput" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="apartmentInput">Номер квартиры:</label>
        @Html.DropDownList("ApartmentId", new SelectList(Model.Apartments, "Id",  "Id"), null, new { id="apartmentInput", @class="form-select"})
    </div>
    <div class="mb-3">
        <input type="submit" value="Добавить" class="btn btn-dark" />
    </div>
}